{
    "compilerOptions": {
        "outDir": "./bin/",
        "sourceMap": false,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "declaration": true
    },
    "include": [
        "./src/**/*"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true,
        "babelOptions": {
            "babelrc": false,
            "presets": [
                ["@babel/preset-env", { "modules": false }]
            ],
            "plugins": ["transform-semantic-ui-react-imports"]
        },
        "babelCore": "@babel/core"
    }
}